pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    
                    bat "dotnet restore"

                    bat "dotnet build --configuration Release"
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    
                    bat "dotnet publish --no-restore --configuration Release --output .\\publish"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {

                    publishDir="C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\DotNetPipeline\\publish"
                    deploymentPath="E:\\AspMVC"
                    iisServer="iis-server.example.com"
                    iisUser="LAPTOP-M82Q6P4C\\hp"
                    iisPassword="9079124953"
                    appPoolName="Application"
                    siteName="eCommerce"

                    sh """
                    cp -r "${publishDir}"\\* "${deploymentPath}"
                    """                    
                    sh """
                    ssh ${iisUser}@${iisServer} "powershell -Command {
                        Restart-WebAppPool -Name '${appPoolName}'
                        Restart-WebItem -Path 'IIS://${iisServer}/${siteName}'
                    }"
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Build, test, and publish successful!'
        }
    }
}
