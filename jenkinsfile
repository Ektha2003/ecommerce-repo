pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    
                    bat "dotnet restore"

                    bat "dotnet build --configuration Release"
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    
                    bat "dotnet publish --no-restore --configuration Release --output .\\publish"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                   withCredentials([usernamePassword(credentialsId: 'iis-credentials', usernameVariable: 'IIS_USER', passwordVariable: 'IIS_PASSWORD')]) {
                    powershell '''
                  
                    $credential = New-Object System.Management.Automation.PSCredential($env:IIS_USER,(ConvertTo-SecureString $env:IIS_PASSWORD -AsPlainText -Force))

                    New-PSDrive -Name X -PSProvider FileSystem -Root "E:\\AspMVC" -Persist -Credential $credential
                   
                    Copy-Item -Path 'publish\\*' -Destination 'X:\' -Force

                   Remove-PSDrive -Name X
                    '''
                }
                }
            }
        }
    }

    post {
        success {
            echo 'Build, test, and publish successful!'
        }
    }
}
